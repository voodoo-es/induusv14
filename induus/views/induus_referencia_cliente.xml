<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="referencia_cliente_form" model="ir.ui.view">
        <field name="name">referencia_cliente.form</field>
        <field name="model">induus.referencia_cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_tmpl_id"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="referencia_cliente_tree" model="ir.ui.view">
        <field name="name">referencia_cliente.tree</field>
        <field name="model">induus.referencia_cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="referencia_cliente_search" model="ir.ui.view">
        <field name="name">referencia_cliente.search</field>
        <field name="model">induus.referencia_cliente</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>
</odoo>
